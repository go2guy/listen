<?xml version="1.0"?>
<!-- Load root.vxml which contains global variables and reference to javascript library file -->
<vxml version="2.0" application="file:/interact/apps/spotbuild/listen_mailbox/root.vxml"> <!--  Set location of root document -->
    <!-- Last Modified 05/17/2010
       *   @Name   assign-variable.vxml
       *   @Desc   Assigns a value to a global variable -->

    <var name="II_SB_nxtOpt" expr="'102-5'"/>  <!-- Name of next file -->

    <form id="beginDocument">
        <block>
	    <log target="status">Old vm Setup</log>
            <log>INFO: Entered assign-variable.vxml [102-44]</log>
            <log>INFO: Current value [<value expr="count"/>]</log>
<assign name="count" expr="'0'+''" />
<log>INFO: Updated value [<value expr="count"/>]</log>
<log>INFO: Current value [<value expr="returnVal"/>]</log>
<assign name="returnVal" expr="oldResult+''" />
<log>INFO: Updated value [<value expr="returnVal"/>]</log>
<log>INFO: Current value [<value expr="numOfVoicemails"/>]</log>
<assign name="numOfVoicemails" expr="oldCount+''" />
<log>INFO: Updated value [<value expr="numOfVoicemails"/>]</log>

            <if cond="II_SB_nxtOpt != ''">
                <log>INFO: Next option [<value expr="II_SB_nxtOpt"/>.vxml]</log>
				<goto expr="'file:' + II_SB_APP_PATH + II_SB_nxtOpt + '.vxml'"/>
			<else/> <!-- Exit to ccxml layer -->
				<assign name="II_SB_status" expr="'endCall'"/>
				<log>INFO: Next Node not set. Exit to CCXML.</log>
				<log>INFO: Return Status [<value expr="II_SB_status"/>]</log>
				<exit namelist="II_SB_status"/>
			</if>
        </block>
    </form>
</vxml>
