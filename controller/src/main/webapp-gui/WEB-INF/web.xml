<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <filter>
        <filter-name>RequestInformationFilter</filter-name>
        <filter-class>com.interact.listen.RequestInformationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestInformationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StatFilter</filter-name>
        <filter-class>com.interact.listen.stats.StatFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StatFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- servlet definitions -->

    <servlet>
        <servlet-name>ApiServlet</servlet-name>
        <servlet-class>com.interact.listen.ApiServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>DropParticipantServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.DropParticipantServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GetConferenceHistoryServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.GetConferenceHistoryServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GetConferenceInfoServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.GetConferenceInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GetConferenceListServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.GetConferenceListServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GetConferenceParticipantsServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.GetConferenceParticipantsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.IndexServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>MuteParticipantServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.MuteParticipantServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ProvisionAccountServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.ProvisionAccountServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UnmuteParticipantServlet</servlet-name>
        <servlet-class>com.interact.listen.gui.UnmuteParticipantServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- mappings -->

    <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DropParticipantServlet</servlet-name>
        <url-pattern>/dropParticipant</url-pattern>    
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetConferenceHistoryServlet</servlet-name>
        <url-pattern>/getConferenceHistory</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetConferenceInfoServlet</servlet-name>
        <url-pattern>/getConferenceInfo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetConferenceListServlet</servlet-name>
        <url-pattern>/getConferenceList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetConferenceParticipantsServlet</servlet-name>
        <url-pattern>/getConferenceParticipants</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MuteParticipantServlet</servlet-name>
        <url-pattern>/muteParticipant</url-pattern>    
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProvisionAccountServlet</servlet-name>
        <url-pattern>/provisionAccount</url-pattern>    
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UnmuteParticipantServlet</servlet-name>
        <url-pattern>/unmuteParticipant</url-pattern>    
    </servlet-mapping>

    <!-- welcome files -->

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

</web-app>